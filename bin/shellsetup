xtnodecmd () { 
    RUN_EP=$1; RUN_NAME=XTNODE_`date +%s`; shift;
    docker run -it --init --rm --name $RUN_NAME -v $PWD:/app --entrypoint $RUN_EP cogsmith/xtnode $@; 
    unset RUN_EP RUN_NAME;
};

outnull () {
    eval "$@" 1>/dev/null 2>/dev/null
};

alias xtnode='xtnodecmd xtnode';
alias xtnodemon='xtnodecmd xtnodemon';
alias xtnodepm2='xtnodecmd xtnodepm2';
alias xtnodels='docker container ls -qa --filter name=XTNODE_';
alias xtnoderm='outnull docker stop `xtnodels` ; outnull docker rm `xtnodels`';
alias xtnodepull='outnull docker rmi cogsmith/xtnode ; outnull docker pull cogsmith/xtnode ; xtnode version';
